<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>news_detail</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <style>
        .header {
            position: relative;
            width: 100%;
            height: 44px;
            background-color: ##fefdfd;
            text-align: center;
            border-bottom: #f5f5f6 .07rem solid;
        }

        .header .refh {
            position: absolute;
            box-sizing: border-box;
            bottom: 0;
            left: 4%;
            width: 22px;
            height: 44px;
            color: #333333;
            font-size: 16px;
            line-height: 44px;
            background: url(../image/return.png) 0px 12px no-repeat;
            background-size: 11px 19px;
            z-index: 2;
        }

        .header .title {
            position: relative;
            box-sizing: border-box;
            width: 100%;
            height: 44px;
            color: #333333;
            font-size: 19px;
            font-weight: bold;
            line-height: 44px;
        }

        .header .goshare {
            position: absolute;
            bottom: 0;
            right: 4%;
            width: 20px;
            height: 44px;
            background: url(../image/partake.png) no-repeat 0px center;
            background-size: 20px;
        }
    </style>
</head>

<body>
    <header class="header" id="header">
        <div class="refh" tapmode="hover" onclick="closeWin()"></div>
        <div class="title"></div>
        <div class="goshare" tapmode="hover" onclick="showShare()"></div>
    </header>
</body>
<script src="../script/api.js"></script>
<script>
    var headerH,
        winHeight,
        MNActionButton;

    apiready = function() {
        init();
        openDetailFrame();
    }

    function init() {
        var header = $api.byId('header');
        headerH = $api.offset(header).h;
        winHeight = api.winHeight;
        var systemType = api.systemType;

        $api.fixStatusBar(header);
        if (systemType == "ios") {
            headerH += 20;
        } else {
            headerH += 25;
        }

        // 分享菜单按钮模块
        MNActionButton = api.require("MNActionButton");
    }

    function openDetailFrame() {
        api.openFrame({
            name: 'news_detail_frame',
            url: './news_detail_frame.html',
            rect: {
                x: 0,
                y: headerH,
                w: 'auto',
                h: winHeight - headerH
            },
            pageParam: {
                ArticleId: api.pageParam.ArticleId,
                Title: api.pageParam.Title,
                Logo: api.pageParam.Logo
            },
            bounces: true
        });
    }

    function showShare() {
        MNActionButton.open({
            layout: {
                row: 1,
                col: 4,
                rowSpacing: 5,
                colSpacing: 10,
                offset: 0
            },
            animation: true,
            autoHide: true,
            styles: {
                maskBg: 'rgba(0,0,0,0.3)',
                bg: '#fff',
                cancelButton: {
                    size: 44,
                    bg: '#fff',
                    icon: 'widget://image/cancel.png'
                },
                item: {
                    titleColor: '#888',
                    titleHighlight: 'dd2727',
                    titleSize: 12
                },
                indicator: {
                    color: '#c4c4c4',
                    highlight: '#9e9e9e'
                }
            },
            items: [{
                icon: 'widget://image/blank.png',
                highlight: 'widget://image/blank.png',
                title: ''
            }, {
                icon: 'widget://image/wx.png',
                highlight: 'widget://image/wx.png',
                title: '微信'
            }, {
                icon: 'widget://image/wx_friend.png',
                highlight: 'widget://image/wx_friend.png',
                title: '朋友圈'
            }, {
                icon: 'widget://image/blank.png',
                highlight: 'widget://image/blank.png',
                title: ''
            }]
        }, function(ret) {
            if (ret) {
                if (ret.index == 1) { // 微信好友
                    api.execScript({
                        frameName: 'news_detail_frame',
                        script: 'wxShare("session");'
                    });
                } else if (ret.index == 2) { // 微信朋友圈
                    api.execScript({
                        frameName: 'news_detail_frame',
                        script: 'wxShare("timeline");'
                    });
                } else {
                    MNActionButton.show();
                }
            }
        });
    }

    // 关闭当前窗口
    function closeWin() {
        api.closeWin();
    }
</script>

</html>
